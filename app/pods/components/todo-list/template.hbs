<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Határidő</th>
            <th>Állapot</th>
            <th>Leírás</th>
            <th>Funkciók</th>
        </tr>   
    </thead>
    <tbody>

        {{#each todos}}
        <tr>
            {{!--{{log this}}--}}
            <td>{{date}}</td>
            <td>{{status}}</td>
            <td><span class="badge">{{numberOfMessages}}</span> {{description}}</td>
            <td>
                {{link-to "Megtekint" "todos.view" this class="btn btn-default btn-sm"}}
                {{link-to "Szerkeszt" "todos.edit" this class="btn btn-info btn-sm"}}
                <button {{action "deleteTodo" this}} class="btn btn-warning btn-sm">Töröl</button>
            </td>
        </tr>
        {{/each}}

